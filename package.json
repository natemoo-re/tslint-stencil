{
  "name": "tslint-stencil",
  "version": "1.0.1",
  "description": "Adds stylistic rules to tslint for Stencil projects",
  "keywords": [
    "tslint",
    "rules",
    "stencil",
    "stenciljs"
  ],
  "main": "rules/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "compile": "tsc",
    "build": "rm -rf rules && npm run compile && npm run docs",
    "test": "tslint --test test/rules/**/*",
    "verify": "npm run build && npm run test",
    "commit": "node scripts/commit",
    "predocs": "rm -rf docs",
    "docs": "node scripts/docs"
  },
  "author": "Nate Moore",
  "contributors": [
    {
      "name": "Nate Moore",
      "email": "nate@natemoo.re",
      "url": "https://natemoo.re"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natemoo-re/tslint-stencil.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^10.9.2",
    "cli-spinner": "^0.2.8",
    "colorette": "^1.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^1.17.0",
    "prompts": "^1.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
